.redPacketClass{
  width: 400rpx;
  height: 540rpx;
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  margin: auto;
  z-index: 9999;
  font-size: 30rpx;
}

.redPacketClass .redbag{
  position: absolute;
  left: 0;
  top: 0;
  z-index: 6;
  width: 100%;
  height: 100%;
}
.redPacketClass .red-content{
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  z-index: 7;
  margin: auto;
  width: 100%;
  height: 100rpx;
  text-align: center;
  color: rgb(0, 208, 255);
}
.redPacketClass .red-content .name{
  color: aqua;
  margin-bottom: 15rpx;
  font-size: 44rpx;
}
.redPacketClass .guanbi{
  position: absolute;
  right: 20rpx;
  top: 200rpx;
  z-index: 9;
  width: 40rpx;
  height: 40rpx;
}