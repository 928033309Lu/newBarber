}
.home2 .youimgbox .divbox{
  width: 100%;
  height: 40%;
  position: absolute;
  left: 0;
  bottom: 0;
  z-index: 7;
}
.home2 .youimgbox .div{
  display: flex;
  background: #F4F4F4;
  width: 100%;
}

.home2 .youimgbox .bott{
  width: 100%;
  background:#F4F4F4;
  font-size: 32rpx;
  color: #000;
  padding: 10rpx 20rpx;
}

.home2 .youimgbox .youimg{
  width: 30%;
}
.home2 .youimgbox .txtimg{
  width: 70%;
}
.home2 .bei{
  position: absolute;
  z-index: 6;
  left: 0;
  top:0;
  width:100%;
  height: 100%;
}
.home2 .imgShow{
  width: 100%;
  height: 100%;
  position: fixed;
  left: 0;
  top: 0;
  background:rgba(0, 0, 0, 0.9);
  z-index: 9999;
}
