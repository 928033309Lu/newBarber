/* pages/wallpaper/wallpaper.wxss */
.wallpaper-panel{
  width: 100%;
  height: 100%;
  position: relative;
}
.wallpaper-content{
  height: 100%;
  background: rgba(255,255,255,0.9);
}
.wallpaper-content .tip{
  width: 100%;
  line-height: 38rpx;
  padding: 10rpx;
  background: #333;
  position: sticky;
  top: 0;
  left: 0;
  z-index: 1;
  font-size: 28rpx;
  color: #fff;
}